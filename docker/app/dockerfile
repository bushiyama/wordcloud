FROM golang:1.25-alpine3.21

# Install necessary packages including MeCab
RUN apk update && apk add --no-cache \
    git \
    gcc \
    musl-dev \
    make 

# Set working directory
WORKDIR /go/src/github.com/bushiyama/wordcloud

# Copy go mod files first for better caching
COPY go.mod go.sum ./

# Download dependencies
RUN go mod download

# Copy source code
COPY . .

# Keep container running
CMD ["tail", "-f", "/dev/null"]